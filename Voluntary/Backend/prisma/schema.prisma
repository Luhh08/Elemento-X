// Aqui iremos controlar todas as configurações do banco de dados
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Aqui é uma tabela do banco de dados, chamada de Model
model Usuario {
  // O ID no MongoDB é um ObjectId, então configura desse jeito ai, acho que é um padrão
  // Segue a estrutura
  // nome do campo        tipo de dado         configuracoes do campo
  id    String @id @default(auto()) @map("_id") @db.ObjectId // Vou mostrar o campo de cpf sendo unico, depois tu faz email e senha
  email String @unique // Acabei de criar um campo chamado CPF que é único na tabela, ou seja, ele não permite cadastrar um cpf igual
  // Faz ai de email e senha
  senha String 
  // dataNascimento DateTime
  // genero String
  // tipo String
}